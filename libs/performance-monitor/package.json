{
  "name": "perfor-monitor",
  "version": "1.0.0",
  "description": "性能监控工具库",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "docs:dev": "rspress dev",
    "docs:build": "rspress build",
    "docs:preview": "rspress preview",
    "docs:serve": "rspress serve",
    "dev": "rollup -c -w",
    "test": "vitest run",
    "clean": "rimraf dist",
    "prebuild": "rimraf dist",
    "build": "cross-env NODE_ENV=production rollup -c",
    "postbuild": "node scripts/verify-build.js",
    "build:dev": "cross-env NODE_ENV=development rollup -c",
    "build:watch": "rollup -c -w",
    "build:analyze": "node build.js --analyze",
    "build:advanced": "node build.js",
    "build:all": "npm run clean && npm run test && npm run build && npm run docs:build",
    "prepublishOnly": "npm run build",
    "prepublishOnlyAndTest": "npm run test && npm run build",
    "release": "node ../../scripts/publish.js --tag alpha --name perfor-monitor",
    "release:beta": "node ../../scripts/publish.js --tag beta --name perfor-monitor",
    "release:rc": "node ../../scripts/publish.js --tag rc --name perfor-monitor",
    "release:prod": "node ../../scripts/publish.js --tag latest --name perfor-monitor",
    "build:pnpm": "pnpm run build",
    "build:npm": "npm run build",
    "publish:test": "node scripts/build-and-publish.js --dry-run",
    "publish:npm": "node scripts/build-and-publish.js",
    "publish:beta": "node scripts/build-and-publish.js --tag=beta",
    "publish:alpha": "node scripts/build-and-publish.js --tag=alpha",
    "publish:next": "node scripts/build-and-publish.js --tag=next",
    "publish:simple": "node publish.js",
    "publish:dry": "node publish.js --dry-run",
    "publish:quick": "node publish.js --skip-test --skip-build",
    "publish:tag": "node publish.js --create-git-tag"
  },
  "peerDependencies": {
    "react": ">=16.9.0",
    "react-dom": ">=16.9.0"
  },
  "keywords": [
    "performance",
    "monitor",
    "web-vitals",
    "jank",
    "stutter"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/jsdom": "21.1.7",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "cross-env": "^10.0.0",
    "jsdom": "26.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-intersection-observer": "9.16.0",
    "rimraf": "6.0.1",
    "rollup": "^4.12.0",
    "rollup-plugin-dts": "^6.1.0",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vitest": "3.2.4"
  }
}